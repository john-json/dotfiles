#!/bin/bash

# Check if --full was passed
if [[ "$1" == "--full" ]]; then
    BAR_CONFIG="bar-full"
else
    BAR_CONFIG="bar"
fi

# Set the environment variable globally for SketchyBar
sudo launchctl setenv BAR_CONFIG "$BAR_CONFIG"

# Stop SketchyBar service
brew services stop sketchybar
sleep 1  # Wait to ensure it fully stops

# Start SketchyBar service with the correct environment variable
brew services start sketchybar

echo "Started SketchyBar with $BAR_CONFIG"
